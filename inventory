# hosts       declare variables for each host "appache" and "php" 

#Ubuntu hosts
10.10.0.7 apache_package=apache2 php_package=libapache2-mod-php
10.10.0.8 apache_package=apache2 php_package=libapache2-mod-php

#CentOS hosts
10.10.0.10 apache_package=httpd php_package=php

#Debian hosts
10.10.0.11 apache_package=apache2 php_package=libapache2-mod-php
